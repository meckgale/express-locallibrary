<h1><%= title %></h1>

<% if (author_list.length) { %>
<ul>
  <% author_list.forEach(function(author) { %>
  <li>
    <a href="<%= author.url %>"><%= author.name %></a>
    (<%= author.date_of_birth ? author.date_of_birth.toDateString() : 'Unknown'
    %> - <%= author.date_of_death ? author.date_of_death.toDateString() :
    'Unknown' %>)
  </li>
  <% }); %>
</ul>
<% } else { %>
<p>There are no authors.</p>
<% } %>
